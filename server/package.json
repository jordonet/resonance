{
  "name": "@deepcrate/server",
  "version": "0.1.0",
  "description": "Self-hosted music discovery pipeline server",
  "main": "dist/server.js",
  "keywords": [
    "music",
    "discovery",
    "listenbrainz",
    "lastfm",
    "soulseek"
  ],
  "author": "Jordon Leach",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "NODE_ENV=development LOG_LEVEL=info nodemon --watch src --ext ts --exec 'tsx -r dotenv/config ./src/server.ts'",
    "debug": "NODE_ENV=development LOG_LEVEL=debug nodemon --watch src --ext ts --exec 'tsx -r dotenv/config ./src/server.ts'",
    "start": "NODE_ENV=production node dist/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@sequelize/core": "7.0.0-alpha.48",
    "@sequelize/sqlite3": "7.0.0-alpha.48",
    "@sequelize/utils": "7.0.0-alpha.48",
    "async-mutex": "^0.5.0",
    "axios": "^1.13.5",
    "cors": "^2.8.6",
    "cron-parser": "^5.5.0",
    "express": "^5.2.1",
    "js-yaml": "^4.1.1",
    "lru-cache": "^11.2.6",
    "node-cron": "^4.2.1",
    "socket.io": "^4.8.3",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.18",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^17.2.4",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jiti": "^2.6.1",
    "nock": "^14.0.11",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  }
}
